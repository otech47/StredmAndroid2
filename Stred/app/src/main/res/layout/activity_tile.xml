<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/setmine_white"
    android:padding="5dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/activityImage"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/image_padding"
        android:scaleType="centerInside"
        android:src="@drawable/logo"
        android:background="@drawable/border_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/activityImage"
        android:padding="5dp"
        android:id="@+id/activityName"
        android:text="Activity Name"
        android:gravity="center"
        android:textColor="@color/setmine_black"
        android:textSize="20sp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/border_blue"
        android:padding="1dp"
        android:layout_alignBottom="@id/activityImage"
        android:layout_below="@id/activityName"
        android:layout_toRightOf="@id/activityImage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/activityPlay"
            android:background="@drawable/pressable_button_white_to_blue"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:id="@+id/activityPlayImage"
                android:src="@drawable/ic_action_play"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activityPlayText"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/activityPlayImage"
                android:layout_centerInParent="true"
                android:text="Play"
                android:gravity="center"
                android:textColor="@color/setmine_black"
                android:textSize="14sp"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:id="@+id/button_border"
            android:background="@color/setmine_blue" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/activityViewAllSets"
            android:background="@drawable/pressable_button_white_to_blue"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:id="@+id/activityViewImage"
                android:src="@drawable/playlist_icon_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activityViewAllSetsText"
                android:text="View All Sets"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/activityViewImage"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/setmine_black"
                android:textSize="14sp"/>

        </RelativeLayout>





    </LinearLayout>




</RelativeLayout>