<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/setmine_white"
    android:padding="10dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/activityImage"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/image_padding"
        android:scaleType="centerInside"
        android:src="@drawable/logo"
        android:background="@drawable/border_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activityImage"
        android:padding="@dimen/small_text_padding"
        android:id="@+id/activityName"
        android:text="Activity Name"
        android:gravity="center"
        android:textColor="@color/setmine_black"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/activityImage"
        android:layout_below="@id/activityName"
        android:layout_toRightOf="@id/activityImage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/activityPlay"
            android:background="@drawable/border_blue"
            android:gravity="center" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:id="@+id/activityPlayImage"
                android:src="@drawable/ic_action_play"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activityPlayText"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/activityPlayImage"
                android:layout_centerInParent="true"
                android:text="Play"
                android:gravity="center"
                android:textColor="@color/setmine_black"
                android:textSize="16sp"/>

        </RelativeLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/activityViewAllSets"
            android:background="@drawable/border_blue"
            android:padding="@dimen/small_text_padding"
            android:text="View All Sets"
            android:gravity="center"
            android:textColor="@color/setmine_black"
            android:textSize="16sp"/>

    </LinearLayout>




</RelativeLayout>