<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:background="@drawable/top_bottom_border_purple"
    android:id="@+id/artist_tile_upcoming">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/artist_icon"
        android:scaleType="centerCrop"
        android:id="@+id/artistImage"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoButton"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/nav_icon_blue">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:id="@+id/pastSetsImage"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_search"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Sets"
            android:paddingRight="@dimen/small_text_padding"
            android:textSize="15sp"
            android:textColor="@color/setmine_white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pastSetsImage"/>

    </RelativeLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="170dp"
        android:text="Artist"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:id="@+id/artistText"
        android:textColor="#FF000000"
        android:layout_toRightOf="@id/artistImage"
        android:textSize="17sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingLeft="8dp"
        android:id="@+id/setTimeIcon"
        android:src="@drawable/ic_action_alarms"
        android:layout_toRightOf="@id/artistImage"
        android:layout_below="@id/artistText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day, Set Time"
        android:id="@+id/setTime"
        android:textColor="@color/setmine_purple"
        android:gravity="bottom"
        android:layout_toRightOf="@id/setTimeIcon"
        android:layout_alignBottom="@id/setTimeIcon"
        android:layout_below="@id/artistText"
        android:paddingTop="3sp"
        android:paddingBottom="3sp"
        android:paddingLeft="8dp"
        android:textSize="12sp"/>




</RelativeLayout>