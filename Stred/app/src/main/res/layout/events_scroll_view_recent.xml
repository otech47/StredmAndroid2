<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000">

    <ListView
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:id="@+id/eventsListRecent">

    </ListView>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@drawable/white_border"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/event_search_nav_icon"
        android:src="@drawable/event_search_nav_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/browse_icon_padding"
        android:layout_marginBottom="@dimen/browse_icon_padding"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/event_nav_icon"
        android:src="@drawable/event_nav_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/browse_icon_padding"
        android:layout_marginBottom="@dimen/browse_icon_padding"/>

</RelativeLayout>