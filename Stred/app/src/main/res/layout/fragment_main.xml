<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:id="@+id/fragment_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/setmine_splash" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/progress_padding"
        android:background="#FFFFFF"
        android:textColor="@color/setmine_black"
        android:text="Press back again to exit"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/currentFragmentContainer">
    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/splash_loading"
        android:layout_margin="@dimen/progress_padding"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:gravity="center|bottom"
        android:indeterminate="true" />


</RelativeLayout>
