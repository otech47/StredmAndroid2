<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@android:color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/offerBackgroundImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/offerDetailImage"
            android:src="@drawable/logo"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exclusive Content"
        android:id="@+id/exclusiveContentText"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___ many miles"
        android:id="@+id/distanceText"
        android:layout_below="@+id/exclusiveContentText"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="14dp"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Once unlocked, you have __ hours to redeem your offer"
        android:id="@+id/redemptionText"
        android:layout_marginBottom="25dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/unlockedLayout"
        android:layout_margin="50dp"
        android:background="@color/setmine_white"
        android:visibility="visible">

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:id="@+id/closeButton"
            android:layout_gravity="right|top"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:tint="#50000000"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:id="@+id/congratsText"
            android:layout_gravity="center"
            android:textSize="35dp"
            android:textColor="@color/setmine_dark_gray"
            android:gravity="center_horizontal"
            android:layout_below="@id/closeButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:singleLine="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/blueBar1"
            android:background="@color/setmine_blue"
            android:layout_below="@+id/congratsText"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blueBar1"
            android:layout_alignRight="@+id/closeButton"
            android:layout_alignEnd="@+id/closeButton"
            android:layout_marginTop="15dp"
            android:id="@+id/relativeLayout2"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have "
                android:id="@+id/textView"
                android:textColor="@color/setmine_dark_gray"
                android:textSize="15dp"

                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 min "
                android:id="@+id/minutesLeftText"
                android:textColor="@color/setmine_dark_gray"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_alignTop="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="left to"
                android:id="@+id/textView2"
                android:textColor="@color/setmine_dark_gray"
                android:textSize="15dp"


                android:layout_toRightOf="@+id/minutesLeftText"
                android:layout_toEndOf="@+id/minutesLeftText"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="redeem offer."
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:textColor="@color/setmine_dark_gray"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/blueBar2"
            android:background="@color/setmine_blue"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_above="@id/vendorMessageLayout"
            android:adjustViewBounds="false"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutVendorPic"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView3"
            android:layout_above="@id/vendorMessageLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vendorIcon"
                android:src="@drawable/logo"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:id="@+id/vendorMessageLayout"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The vendor message goes here.\n If you&apos;re seeing this someone fucked up."
                android:id="@+id/vendorMessage"
                android:layout_centerHorizontal="true"
                android:gravity="clip_vertical|center_horizontal"
                android:textSize="15dp"
                android:textColor="@color/setmine_dark_gray"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"

                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>