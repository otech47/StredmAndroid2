<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/offer_instructions_pager_container">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/offer_instructions_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setmine_white"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/offer_instructions_title_tab"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@id/offer_instructions_pager"
        android:layout_height="wrap_content"
        app:fillColor="@color/setmine_gray"
        app:pageColor="@color/setmine_blue"

        />

</RelativeLayout>