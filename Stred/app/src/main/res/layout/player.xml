<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player_background"
    android:minWidth="100dp"
    android:paddingTop="?android:attr/actionBarSize">

	<LinearLayout
	    android:id="@+id/player_footer"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:layout_alignParentBottom="true"
	    android:gravity="center" >

		 <ImageButton
	        android:id="@+id/player_button_rewind"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:adjustViewBounds="false"
	        android:background="@null"
	        android:scaleType="centerInside"
	        android:src="@drawable/btn_rewind" />

	    <ImageButton
	        android:id="@+id/player_button_play"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:adjustViewBounds="false"
	        android:background="@null"
	        android:scaleType="centerInside"
	        android:src="@drawable/btn_play" />

		 <ImageButton
	        android:id="@+id/player_button_fast_forward"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:adjustViewBounds="false"
	        android:background="@null"
	        android:scaleType="centerInside"
	        android:src="@drawable/btn_fast_forward" />
	</LinearLayout>

	<ImageButton 
		android:id="@+id/player_button_shuffle"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:adjustViewBounds="false"
		android:background="@null"
		android:scaleType="centerInside"
		android:padding="10dp"
		android:layout_alignBottom="@+id/player_footer"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:src="@drawable/btn_shuffle" />
	
	<ImageButton 
		android:id="@+id/player_button_download"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:adjustViewBounds="false"
		android:background="@null"
		android:scaleType="centerInside"
		android:padding="10dp"
		android:layout_alignBottom="@id/player_footer"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:src="@drawable/btn_download" />

	<RelativeLayout
	    android:id="@+id/player_tracklist"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/player_footer"
	    android:gravity="center" >

		 <ImageButton
	        android:id="@+id/player_button_tracklist"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
            android:padding="10dp"
	        android:adjustViewBounds="false"
	        android:background="@null"
	        android:scaleType="centerInside"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
			android:src="@drawable/btn_tracklist" />

		  <TextView
		    android:id="@+id/player_track_title"
		    android:layout_toLeftOf="@id/player_button_tracklist"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:scrollHorizontally="true"
		    android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:focusable="true"
			android:focusableInTouchMode="true"
		    android:gravity="left"
            android:text="Track Name"
            android:textColor="#FF000000"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="20dp"
		    android:lines="1"
		    android:singleLine="true"
		    android:textSize="16sp" />

	</RelativeLayout>

	<!-- Progress Bar/Seek bar -->

	<SeekBar
	    android:id="@+id/player_progress_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/player_tracklist"
	    android:layout_alignParentLeft="true"
	    android:paddingLeft="0dp"
	    android:paddingRight="0dp"
	    android:thumb="@android:color/transparent"
	    android:progressDrawable="@drawable/progress_drawable"
	    android:maxHeight="25dp"
	    android:minHeight="25dp" />
	
	<!-- Timer Display -->

	<RelativeLayout
	    android:id="@+id/player_timer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/player_progress_bar" >

		<TextView
		    android:id="@+id/player_song_time"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="0:00"
            android:textColor="#ff000000"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/player_song_duration"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:text="0:00"
            android:textColor="#ff000000"
		    android:textStyle="bold" />

	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/player_header"
	    android:layout_width="fill_parent"
	    android:layout_height="80dp"
	    android:paddingLeft="20dp"
	    android:layout_alignParentTop="true" >

    	<ImageView 
		    android:id="@+id/player_thumb"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginTop="20dp"
		    android:scaleType="centerCrop"
            android:src="@drawable/logo_small"
		    />

		<TextView
		    android:id="@+id/player_song_title"
		    android:layout_toRightOf="@+id/player_thumb"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="20dp"
		    android:textSize="16sp"
            android:text="Event Title"
            android:textColor="#ff000000" />

		<TextView
		    android:id="@+id/player_song_artist"
		    android:layout_toRightOf="@+id/player_thumb"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:layout_below="@+id/player_song_title"
		    android:textSize="12sp"
            android:text="Artist Title"
            android:textColor="#ff000000" />

	    <ImageButton
	        android:id="@+id/player_button_play_top"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
		    android:paddingTop="20dp"
		    android:paddingRight="20dp"
		    android:paddingBottom="20dp"
		    android:paddingLeft="10dp"
	        android:adjustViewBounds="false"
	        android:background="@null"
	        android:scaleType="centerInside"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/btn_play" />

	</RelativeLayout>

    <ImageView
        android:id="@+id/player_image"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/player_header"
        android:src="@drawable/logo"
        />

</RelativeLayout>