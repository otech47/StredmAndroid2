<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="100dp"
    android:animateLayoutChanges="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_overlay"
        android:scaleType="centerCrop"
        android:paddingTop="?android:attr/actionBarSize"></ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_color_overlay"
        android:background="#CC000000"
        android:paddingTop="?android:attr/actionBarSize"></ImageView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/buffer"></FrameLayout>

    <RelativeLayout
        android:id="@+id/player_header"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:layout_below="@id/buffer" >

        <ImageView
            android:id="@+id/player_thumb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_small"
            />

        <TextView
            android:id="@+id/player_song_title"
            android:layout_toRightOf="@+id/player_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="Event Title"
            android:textColor="#ffFFFFFF" />

        <TextView
            android:id="@+id/player_song_artist"
            android:layout_toRightOf="@+id/player_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_below="@+id/player_song_title"
            android:textSize="12sp"
            android:text="Artist Title"
            android:textColor="#ffFFFFFF" />

        <ImageButton
            android:id="@+id/player_button_play_top"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:adjustViewBounds="false"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_play_white" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/player_image"
        android:padding="10dp"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/player_header"
        android:src="@drawable/logo"
        android:layout_margin="10dp"
        />

	<LinearLayout
	    android:id="@+id/player_footer"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:layout_alignParentBottom="true"
	    android:gravity="center" >

		 <ImageButton
	        android:id="@+id/player_button_rewind"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:adjustViewBounds="false"
	        android:background="@null"
	        android:scaleType="centerInside"
	        android:src="@drawable/ic_action_rewind_white" />

	    <ImageButton
	        android:id="@+id/player_button_play"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:adjustViewBounds="false"
	        android:background="@null"
	        android:scaleType="centerInside"
	        android:src="@drawable/ic_action_play_white" />

		 <ImageButton
	        android:id="@+id/player_button_fast_forward"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:adjustViewBounds="false"
	        android:background="@null"
	        android:scaleType="centerInside"
	        android:src="@drawable/ic_action_fast_forward_white" />
	</LinearLayout>

	<ImageButton 
		android:id="@+id/player_button_playlist"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:background="@null"
		android:scaleType="centerInside"
		android:layout_alignBottom="@+id/player_footer"
		android:layout_alignParentBottom="true"
		android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/playlist_icon"/>


	<ImageButton
		android:id="@+id/player_button_tracklist"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:background="@null"
		android:scaleType="centerInside"
        android:padding="20dp"
        android:src="@drawable/btn_tracklist"
        android:layout_alignBottom="@id/player_footer"
		android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />

	<RelativeLayout
	    android:id="@+id/player_tracklist"
        android:layout_below="@+id/player_progress_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/player_footer"
	    android:gravity="center"
        android:visibility="visible">

		  <TextView
		    android:id="@+id/player_track_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:scrollHorizontally="true"
		    android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:focusable="true"
			android:focusableInTouchMode="true"
            android:text="Track Name"
            android:textColor="#FFFFFFFF"
		    android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/small_text_padding"
            android:paddingRight="@dimen/small_text_padding"
		    android:layout_marginTop="10dp"
		    android:lines="1"
		    android:singleLine="true"
		    android:textSize="16sp" />

	</RelativeLayout>

	<!-- Timer Display -->

	<RelativeLayout
	    android:id="@+id/player_timer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/player_image" >

		<TextView
		    android:id="@+id/player_song_time"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="0:00"
            android:textColor="#FFFFFFFF"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/player_song_duration"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:text="0:00"
            android:textColor="#ffFFFFFF"
		    android:textStyle="bold" />

	</RelativeLayout>
    <!-- Progress Bar/Seek bar -->

    <SeekBar
        android:id="@+id/player_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_timer"
        android:layout_alignParentLeft="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:thumb="@android:color/transparent"
        android:progressDrawable="@drawable/progress_drawable"
        android:maxHeight="25dp"
        android:minHeight="25dp" />

</RelativeLayout>